/* Animation for nav items */
@keyframes navLinkFade {
    from {
        opacity: 0;
        transform: translateX(50px);
    }
    to {
        opacity: 1;
        transform: translateX(0px);
    }
}

/* Utility Classes */
.nav-active {
    transform: translateX(0%);
} 

